# Emunisce Bazel Configuration

# C++ Standard
build --cxxopt=-std=c++17
build --host_cxxopt=-std=c++17

# Enable colors
common --color=yes

# Compiler warnings
build --cxxopt=-Wall
build --cxxopt=-Wextra

# macOS specific settings
build:macos --cxxopt=-Wno-missing-braces

# Platform-specific configs
build:linux --define=os=linux
build:macos --define=os=macos
build:windows --define=os=windows

# Auto-detect platform on macOS
build:macos --host_platform=@platforms//host

# Verbose failures for debugging
build --verbose_failures
